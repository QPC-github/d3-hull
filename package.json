{
  "name": "d3-hull",
  "version": "0.0.2",
  "description": "Compute the convex hull of a set of two-dimensional points.",
  "keywords": [
    "d3",
    "convex",
    "hull"
  ],
  "homepage": "https://github.com/d3/d3-hull",
  "license": "BSD-3-Clause",
  "author": {
    "name": "Mike Bostock",
    "url": "http://bost.ocks.org/mike"
  },
  "contributors": [
    {
      "name": "Daniel Goldbach",
      "url": "http://www.danielgoldbach.com/"
    }
  ],
  "main": "build/hull.cjs",
  "jsnext:main": "index",
  "repository": {
    "type": "git",
    "url": "https://github.com/d3/d3-hull.git"
  },
  "scripts": {
    "pretest": "mkdir -p build && d3-bundler -x -f cjs -o build/hull.cjs.js",
    "test": "faucet `find test -name '*-test.js'`",
    "prepublish": "npm run test && d3-bundler -n hull -o build/hull.js && uglifyjs build/hull.js -c -m -o build/hull.min.js && rm -f build/hull.zip && zip -j build/hull.zip -- LICENSE README.md build/hull.js build/hull.min.js"
  },
  "devDependencies": {
    "d3-bundler": "~0.4.0",
    "faucet": "0.0",
    "tape": "4",
    "uglify-js": "2"
  }
}
